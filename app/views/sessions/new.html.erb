<div id="login-outer" class="clearfix">
  <div id="login-container" class="login-wrapper">    
      <h4 id="login">Log In</h4>
    <%= form_tag sessions_path do %><!--POST request goes to sessions#create-->
      <div class="login-credentials">  
        <div class="login-label">
          <%= label_tag :email, nil, class: "small-2 columns"%>
        </div>
        <div class="login-input">
          <%= text_field_tag(:email, nil, class: "small-10 columns") %>
        </div>
        <div class="login-label">
          <%= label_tag :password, nil, class: "small-2 columns"%>
        </div>
        <div class="login-input">
          <%= password_field_tag(:password, nil, class: "small-10 columns") %>
        </div>
        <div class="login-button">
            <%= submit_tag :Login, :class => "login btn" %>
        </div>    
      </div>
    <% end %>
  </div>
  <div id="login-hints" class="hints">
    <ul class="vcard">
      <li class="fn">To login as student</li>
      <li>email: superman@gmail.com</li>
      <li>password: 123</li>
    </ul>
    <ul class="vcard">
      <li class="fn">To login as instructor</li>
      <li>email: roger@gmail.com</li>
      <li>password: 123</li>
    </ul>
  </div>
</div>